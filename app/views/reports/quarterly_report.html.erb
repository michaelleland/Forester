<div class="grid_10" id="quarterly_report_selector">
	<form action="/exported_report" method="get">
		<h4>Select a year and a quarter</h4>
		<select id="year_selector" name="year">
			<% (0..3).each do |i| %>
				<option value="<%= Time.now.year - i%>"><%= Time.now.year - i%></option>
			<% end %>
		</select>
		<select id="quarter_selector" name="quarter">
			<option value="1">1. Quarter (1/1 - 3/31)</option>
			<option value="2">2. Quarter (3/1 - 6/30)</option>
			<option value="3">3. Quarter (7/1 - 9/30)</option>
			<option value="4">4. Quarter (10/1 - 12/31)</option>
		</select>
		<input type="submit" value="Get report"/>
	</form>
</div>
