	$('#show_new_receipt_item_inputs').fadeOut();	
}

function add_the_receipt_item () {
	$.ajax ({
		url: '/all_'+type+'_entries',
		cache: false,
		success: function (html) {
			$('.all_entries_row').each(function () { $(this).remove()})
			$('#all_entries table').append(html);
		}
	})
}
	
</script>
