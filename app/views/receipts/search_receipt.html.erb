<div class="grid_10" id="logger_receipt_selector">
	<h4>Search for an old receipt </h4>
	<form action="/get_logger_receipt" method="get" target="_blank">
		<h5>Select job:</h5>
		<select id="job_selector">
			<option onclick="init_type_select(); init_receipt_select();" value="0">Select a job</option>
			<% Job.all.each do |i| %>
				<option onclick="init_type_select();" value="<%= i.id %>"><%= i.name %></option>
			<% end %>
		</select>
		
		<h5>Get tickets of:</h5>
		<select id="owner_type_selector">
			<option onclick="init_receipt_select()" value="none"> Select owner type </option>
			<option onclick="refresh_receipts('landowner')" value="landowner">Landowner</option>
			<option onclick="refresh_receipts('logger')" value="logger">Logger</option>
			<option onclick="refresh_receipts('trucker')" value="trucker">Trucker</option>
		</select>
		
		<h5>Select a receipt:</h5>
		
		<div id="tickets_to_receipt">
			<select id="receipts_select" size="10">
				<option value="0">No job selected</option>
			</select>
		</div>
		
		<input id="submit" type="submit" value="Get receipt" />		
	</form>	
</div>

<script>

function init_receipt_select () {
	$('#receipts_select').html('<option value="0">No job selected</option>');
}

function init_type_select () {
	$('#owner_type_selector').val('0');
	$('#receipts_select').html('<option value="0">No owner type selected</option>');
}

function refresh_receipts (type) {
	var job_id = $('#job_selector').val();
	
	$.ajax ({
		url: '/get_receipts/'+job_id+'?owner_type='+type,
		cache: false,
		success: function (html) {
			$('#receipts_select').html(html);
		}		
	});
}

</script>