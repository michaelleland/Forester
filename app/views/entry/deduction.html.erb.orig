  <%= form_for @receipt_item, :url => { :action => "create"},:remote=>true, :html => {:class => "receipt_form"} do |f|%>

    <%= f.label(:job, "Job")%>
    <%= f.select :job_id, Job.all.collect {|j| [ j.name, j.id ] }, {:include_blank => 'None'} %>
    <%= f.radio_button(:owner_type, "owner")%>
    <%= f.label(:owner_type_owner, "Owner")%>
    <%= f.radio_button(:owner_type, "logger") %>
    <%= f.label(:owner_type_logger, "Logger")%>
    <%= f.radio_button(:owner_type, "trucker") %>
    <%= f.label(:owner_type_trucker, "Trucker")%>
    <%= f.text_field(:item_data)%>
    <%= f.label(:item_data, "Description")%>
    <%= f.number_field(:value)%>
    <%= f.label(:value, "Amount")%>
    <%= f.submit "Submit"%>
  <% end %>



  <table>
    <tr>
      <th class="th">Job Name</th>
      <th class="th">Owner Name</th>
      <th class="th">Description</th>
      <th class="th">Amount</th>
    </tr>
    <% @receipt_items.each do |item| if @receipt_items %>
        <tr>
          <% if item.receipt %>
            <td><%= item.receipt.job.name %></td>
            <td><%= item.receipt.job.owner.name %></td>
          <% else %>
            <td><%= item.job.name %></td>
            <td><%= item.job.owner.name %></td>
          <% end %>
          <td><%= item.item_data %></td>
          <td><%= item.value %></td>
        </tr>

      <% end %>
    <% end %>
  </table>
