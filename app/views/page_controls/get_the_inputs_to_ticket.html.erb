<tr id="<%= @ticket.id %>entry" class="all_entries_row">
	<td id="ticket_number"><input value="<%= @ticket.number %>" type="text" /></td>
	<td id="delivery_date"><input value="<%= @ticket.delivery_date.strftime("%m-%d-%Y") %>" type="text" /></td>
	<td id="job_name">
		<select id="job_select">
			<% Job.all.each do |i| %>
				<% if i.name == @ticket.job.name %>
					<option value="<%= i.id %>" selected="true"><%= shorten i.name %></option>
				<% else %>
					<option value="<%= i.id %>"><%= shorten i.name %></option>
				<% end %>
			<% end %>
		</select>
	</td>	
	<td id="destination_name">
		<select id="destination_select">
			<% Destination.all.each do |i| %>
				<% if i.name == @ticket.destination.name %>
					<option value="<%= i.id %>" selected="true"><%= shorten i.name %></option>
				<% else %>
					<option value="<%= i.id %>"><%= shorten i.name %></option>
				<% end %>
			<% end %>
		</select>
	</td>
	<td id="wood_type" type_id="<%= @ticket.wood_type %>">
		<select id="wood_type_select">
			<% WoodType.all.each do |i| %>
				<% if i.id == @ticket.wood_type %>
					<option value="<%= i.id %>" selected="true"><%= i.name %></option>
				<% else %>
					<option value="<%= i.id %>"><%= i.name %></option>
				<% end %>
			<% end %>
		</select>
	</td>
	<td id="species">
		<select id="species_select">
			<% Specie.all.each do |i| %>
				<% if i.id == @ticket.load_details.first.species_id %>
					<option value="<%= i.id %>" selected="true"><%= i.name %></option>
				<% else %>
					<option value="<%= i.id %>"><%= i.name %></option>
				<% end %>
			<% end %>
		</select>
	</td>
	
	<td class="currency" id="net_mbf"><%= give_pennies(@ticket.load_details.first.mbfss) %></td>
	<td class="currency" id="tonnage"><%= give_pennies(@ticket.load_details.first.tonnnage) %></td>
	<td class="currency" id="load_pay"><%= give_pennies(@ticket.value) %></td>
	<td><input type="button" value="save" onclick="save_the_edited_values_of_ticket(<%= @ticket.id %>);"> 
</tr>
<% @ticket.load_details.each do |i| %>
<% if i == @ticket.load_details.first then next end %>
<tr id="<%= i.id %>load_detail_row" class="load_detail_rows">
	<td></td>
	<td></td>
	<td></td>
	<td></td>
	<td></td>
	<td></td>
		
	<td>
		<select id="species_select">
			<% Specie.all.each do |j| %>
				<% if j.id == i.species_id %>
					<option value="<%= j.id %>" selected="true"><%= j.name %></option>
				<% else %>
					<option value="<%= j.id %>"><%= j.name %></option>
				<% end %>
			<% end %>
		</select>
	</td>
	<td><%= give_pennies(i.mbfss) %></td>
	<td><%= give_pennies(i.tonnnage) %></td>
</tr>
<% end %>
