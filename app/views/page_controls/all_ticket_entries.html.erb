<% @tickets.each do |i| %>
	<% @load_details = LoadDetail.find_all_by_ticket_id(i.id)%>
	<tr id="<%= i.id %>entry" class="all_entries_row">
		<td><%= i.number %></td>
		<td><%= i.delivery_date.strftime("%m-%d-%Y") %></td>
		<td><%= i.job.name %></td>	
		<td><%= i.destination.name %></td>
		<td><%= WoodType.find(i.wood_type).name %></td>
		<td><%= unless i.load_details.first.species_id == 0 then Specie.find(i.load_details.first.species_id).code else "PU" end %></td>
		<td><%= i.net_mbf %></td>
		<td><%= i.tonnage %></td>
		<td><%= i.value %></td>
		<td><input type="button" value="delete" onclick="delete_ticket_entry(<%= i.id %>);"></td>
	</tr>
<% end %>

<script>
	function stripe_the_table() {
		$('.all_entries_row:nth-child(2n)').css('background-color', '#E6E6E6')
	}
	stripe_the_table();
</script>

